<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="@drawable/love">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/e1"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/boy_name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#f33a6a"
        tools:ignore="Autofill,LabelFor,RelativeOverlap,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:layout_below="@id/e1"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/girl_name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#F33A6A"
        tools:ignore="Autofill,HardcodedText,LabelFor,RelativeOverlap,TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/button"
        android:layout_width="186dp"
        android:layout_height="63dp"
        android:layout_below="@id/e2"
        android:layout_marginTop="20dp"

       android:layout_centerHorizontal="true"
        android:background="@drawable/btn"
        android:fontFamily="sans-serif"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/flames"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="HardcodedText,SpUsage,TextContrastCheck,TextSizeCheck,VisualLintButtonSize" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="544dp"
        android:fontFamily="sans-serif-black"
        android:text=""
        android:textColor="#FFEB3B"
        android:textSize="30sp"
        tools:ignore="SpUsage" />

</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        tools:ignore="VisualLintBounds" />

</androidx.drawerlayout.widget.DrawerLayout>





